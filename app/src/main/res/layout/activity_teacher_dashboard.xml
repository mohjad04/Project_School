<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- FrameLayout allows overlap -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Blue header -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/gradient_header"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Horizontal bar with left text and right logout button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="268dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Welcome back!!!"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/logoutbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:contentDescription="Logout"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:focusable="true"
                    android:padding="8dp"
                    android:src="@drawable/logout" />

                <ImageView
                    android:id="@+id/profilebtn"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="Profile"
                    android:focusable="true"
                    android:padding="8dp"
                    app:srcCompat="@drawable/profile" />
            </LinearLayout>
        </LinearLayout>

        <!-- Floating card now floats below header -->
        <androidx.cardview.widget.CardView
            android:id="@+id/floating_card"
            android:layout_width="336dp"
            android:layout_height="129dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="110dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            android:backgroundTint="#FFFFFF">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nametxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/typetxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class"
                    android:textColor="#494747"
                    android:textSize="13dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/logo" />
        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
        <!-- Main Grid -->
        <GridLayout
            android:id="@+id/main_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginTop="40dp">

            <!-- Schedule Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/schedule_card"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“…"
                        android:textSize="32sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Schedule"
                        android:textColor="#3fa9d1"
                        android:textSize="16sp"
                        android:fontFamily="@font/dam"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Marks Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/marks_card"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š"
                        android:textSize="32sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Publish Marks"
                        android:textColor="#3fa9d1"
                        android:textSize="16sp"
                        android:fontFamily="@font/dam"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Assignment Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/assignment_card"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“"
                        android:textSize="32sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Send Assignment"
                        android:textColor="#3fa9d1"
                        android:textSize="16sp"
                        android:fontFamily="@font/dam"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Reports Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/reports_card"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ˆ"
                        android:textSize="32sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Reports"
                        android:textColor="#3fa9d1"
                        android:textSize="16sp"
                        android:fontFamily="@font/dam"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

        <!-- Marks Container -->
        <LinearLayout
            android:id="@+id/marks_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Publish Marks"
                        android:textColor="#3fa9d1"
                        android:textSize="24sp"
                        android:fontFamily="@font/dam"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Class Selection -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Class"
                        android:textColor="#494747"
                        android:textSize="16sp"
                        android:fontFamily="@font/dam"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/class_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/edittext_background"
                        android:layout_marginBottom="16dp" />

                    <!-- Course Selection -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Course"
                        android:textColor="#494747"
                        android:textSize="16sp"
                        android:fontFamily="@font/dam"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/course_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/edittext_background"
                        android:layout_marginBottom="16dp" />


                    <Button
                        android:id="@+id/load_students_btn"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Load Students"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#3fa9d1"
                        android:textSize="16sp"
                        android:fontFamily="@font/dam"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reports_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <Button
                        android:id="@+id/mark_attendance"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Mark Attendance"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#3fa9d1"
                        android:textSize="16sp"
                        android:fontFamily="@font/dam"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/report_attendance"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Attendance Report"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#3fa9d1"
                        android:textSize="16sp"
                        android:fontFamily="@font/dam"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>