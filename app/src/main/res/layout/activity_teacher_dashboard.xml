<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_header"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher Dashboard"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:fontFamily="@font/dam"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage your classes, marks, and assignments"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:fontFamily="@font/dam"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Main Grid -->
        <GridLayout
            android:id="@+id/main_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginTop="-40dp">

            <!-- Schedule Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/schedule_card"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#E3EDF0"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“…"
                        android:textSize="32sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Schedule"
                        android:textColor="#3fa9d1"
                        android:textSize="16sp"
                        android:fontFamily="@font/dam"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Marks Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/marks_card"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#E3EDF0"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š"
                        android:textSize="32sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Publish Marks"
                        android:textColor="#3fa9d1"
                        android:textSize="16sp"
                        android:fontFamily="@font/dam"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Assignment Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/assignment_card"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#E3EDF0"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“"
                        android:textSize="32sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Send Assignment"
                        android:textColor="#3fa9d1"
                        android:textSize="16sp"
                        android:fontFamily="@font/dam"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Reports Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/reports_card"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#E3EDF0"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ˆ"
                        android:textSize="32sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Reports"
                        android:textColor="#3fa9d1"
                        android:textSize="16sp"
                        android:fontFamily="@font/dam"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

        <!-- Marks Container -->
        <LinearLayout
            android:id="@+id/marks_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Publish Marks"
                        android:textColor="#3fa9d1"
                        android:textSize="24sp"
                        android:fontFamily="@font/dam"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Class Selection -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Class"
                        android:textColor="#494747"
                        android:textSize="16sp"
                        android:fontFamily="@font/dam"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/class_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/edittext_background"
                        android:layout_marginBottom="16dp" />

                    <!-- Course Selection -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Course"
                        android:textColor="#494747"
                        android:textSize="16sp"
                        android:fontFamily="@font/dam"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/course_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/edittext_background"
                        android:layout_marginBottom="16dp" />


                    <Button
                        android:id="@+id/load_students_btn"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Load Students"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#3fa9d1"
                        android:textSize="16sp"
                        android:fontFamily="@font/dam"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reports_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <Button
                        android:id="@+id/mark_attendance"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Mark Attendance"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#3fa9d1"
                        android:textSize="16sp"
                        android:fontFamily="@font/dam"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/report_attendance"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Attendance Report"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#3fa9d1"
                        android:textSize="16sp"
                        android:fontFamily="@font/dam"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>