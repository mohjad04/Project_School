<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Assessment Name -->
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assessment Name"
            android:textSize="18sp"
            android:textColor="#3fa9d1"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <!-- Type -->
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type: Quiz"
            android:textColor="#494747"
            android:textSize="14sp"
            android:layout_marginBottom="2dp" />

        <!-- Date -->
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 2025-06-10"
            android:textColor="#494747"
            android:textSize="14sp"
            android:layout_marginBottom="2dp" />

        <!-- Remarks -->
        <TextView
            android:id="@+id/remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remarks: Chapter 1"
            android:textColor="#494747"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Max Score -->
        <TextView
            android:id="@+id/max_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Score: 100"
            android:textColor="#494747"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Percentage -->
        <TextView
            android:id="@+id/percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Percentage: 10%"
            android:textColor="#494747"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Score Input -->
        <EditText
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter score"
            android:inputType="numberDecimal"
            android:backgroundTint="#3fa9d1"
            android:padding="8dp"
            android:textColor="#000"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3fa9d1"
            android:layout_gravity="end" />
    </LinearLayout>
</androidx.cardview.widget.CardView>